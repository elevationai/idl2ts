// Simple IDL for basic testing

module Simple {
  // Basic constant
  const long VERSION = 1;
  
  // Simple enum
  enum Color {
    RED,
    GREEN,
    BLUE
  };
  
  // Simple struct
  struct Point {
    double x;
    double y;
  };
  
  // Simple exception
  exception Error {
    string message;
  };
  
  // Simple typedef
  typedef sequence<Point> PointList;
  
  // Simple interface
  interface Calculator {
    long add(in long a, in long b);
    long subtract(in long a, in long b);
    long multiply(in long a, in long b);
    long divide(in long a, in long b) raises (Error);
  };
};